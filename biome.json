{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5",
      "bracketSpacing": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useSelfClosingElements": "off",
        "useImportType": "off",
        "noUnusedTemplateLiteral": "off",
        "noDefaultExport": "error"
      },
      "correctness": {
        "noEmptyPattern": "off",
        "useExhaustiveDependencies": "off",
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noUnsafeFinally": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noForEach": "off",
        "useArrowFunction": "off",
        "noUselessSwitchCase": "off",
        "noStaticOnlyClass": "off",
        "noExtraBooleanCast": "off",
        "noThisInStatic": "off",
        "noUselessFragments": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noDoubleEquals": "off",
        "noEmptyInterface": "off",
        "noConsoleLog": "warn",
        "noAssignInExpressions": "off",
        "noMisleadingCharacterClass": "off",
        "noExplicitAny": "warn"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noRedundantRoles": "off",
        "useSemanticElements": "off",
        "useFocusableInteractive": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off",
        "noBlankTarget": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "fix": "safe",
          "level": "warn",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "cva", "tw"]
          }
        }
      }
    }
  },
  "files": {
    "ignore": [
      "node_modules",
      ".tsimp",
      ".yarn",
      "coverage",
      "dist",
      ".pnp.cjs",
      ".pnp.loader.mjs",
      ".next",
      "patches",
      "public"
    ]
  },
  "overrides": [
    {
      "include": ["**/page.tsx", "**/layout.tsx", "**/not-found.tsx", "*.config.[jt]s", "*.config.m[jt]s"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      },
      "formatter": {
        "lineWidth": 1
      }
    }
  ]
}
